<h1>All Products</h1>
<%= link_to 'Add product', new_product_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
  </tr>

  <% @products.each do | product | %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.description %></td>
    </tr>
  <% end %>
</table>
